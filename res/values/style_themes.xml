<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
       <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:homeAsUpIndicator">@drawable/icon_menu</item>
        <item name="android:actionBarTabTextStyle">@style/tabtextcolor</item>
        <item name="android:actionBarTabStyle">@style/MyActionBarTabs</item>

        
        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>
        <item name="actionBarTabStyle">@style/MyActionBarTabs</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="homeAsUpIndicator">@drawable/icon_menu</item>
        <item name="actionBarTabTextStyle">@style/tabtextcolor</item>
    </style>

    <style name="tabtextcolor" parent="@android:style/Widget.Holo.Light.ActionBar.TabText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="textV_dark_gray" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:background">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">5dp</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/actionBar</item>

        <!-- Support library compatibility -->
        <item name="background">@color/actionBar</item>
    </style>

