     <style name="green_btn_style">
        <item name="android:textSize">@dimen/buttom_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/btn_green</item>
        <item name="android:gravity">center</item>
    </style>

 <style name="button_login">
        <item name="android:textSize">@dimen/buttom_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_login</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style> 
      <style name="edittext_login">
        <item name="android:textSize">@dimen/edit_text_size</item>
        <item name="android:singleLine">true</item>
        <item name="android:ems">10</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:background">@drawable/type_box_login</item>
        <item name="android:paddingLeft">@dimen/edit_text_padding_left</item>
        <item name="android:paddingRight">@dimen/edit_text_padding_right</item>
    </style>
    <style name="bottom_tab_button">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/bottom_tab_text_unselected</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="btn_light_green">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/light_green</item>
    </style>

